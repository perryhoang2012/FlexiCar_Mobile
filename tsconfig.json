{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src/",
    "skipLibCheck": true,
    "paths": {
      "~assets/*": ["assets/*"],
      "~apis/*": ["apis/*"],
      "~models/*": ["models/*"],
      "~components/*": ["components/*"],
      "~hooks/*": ["hooks/*"],
      "~navigators/*": ["navigators/*"],
      "~redux/*": ["redux/*"],
      "~screens/*": ["screens/*"],
      "~themes/*": ["themes/*"],
      "~untils/*": ["untils/*"],
      "~store/*": ["store/*"]
    }
  },
  "include": ["src"]
}
